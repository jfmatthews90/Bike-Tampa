<div class="container">
  <div class="show"> 
    <p id="notice"><%= notice %></p>
    <div class="row" data-product-id="<%= @product.id%>">
      <div class="col-sm-9 col-md-9">

        <p>
          <%= image_tag(@product.image_url, class: "img-responsive") %>
        </p>
      </div>

      <div class="col-sm-3 col-md-3">
        <p>
          <strong>Name:</strong>
          <%= @product.name %>
        </p>
      
        <p>
         <strong>Description:</strong>
          <%= @product.description %>
        </p>
      
        <p>
          <strong>Colour:</strong>
          <%= @product.colour %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= number_to_currency(@product.price) %>
        </p>

        <p>
          <strong>Average Rating:</strong> 
          <div class="rated" data-score="<%= @product.average_rating %>"></div> <!-- moving ERB outside dive shows it on page --> 
        </p>

        <!-- trying to get star system to work
        <div class="rating"></div> -->
        <p><strong>Highest Rating Comment</strong></p>
          <% if @product.highest_rating_comment %>
            <%= @product.highest_rating_comment.body %>
          <% end %>

        <p><strong>Lowest Rating Comment</strong></p>
          <% if @product.lowest_rating_comment %>
            <%= @product.lowest_rating_comment.body %>
          <% end %>
        <br> 

        <%= render 'new_comment' %>

      </div> <!-- /col -->
    </div> <!-- /row -->
  </div> <!-- /show -->
</div> <!-- /container -->

<br>

<%= render 'comments' %>

<a class="btn btn-default" href="/products">Back to products</a>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
