<!-- Removing table layout for products. Replacing with Bootstrap grib -->

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4 col-lg-3">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <a href="#"><h3><%= product.name %></h3></a>
        <p><%= product.description %></p>
        <p><%= product.color %></p>
        <strong><%= product.price %></strong>
      </div> <!-- /col -->
    <% end %>       
  </div>
</div>


